# /bin/sh

DOMAIN='localhost:8080'
BROWSER='Google Chrome'

# Kill all previously opened browsers
for i in {1..2}; do pkill -9 -o $BROWSER; done

# Ensure no session is already running
killall microbiomes-mallapixels

# Run server
./microbiomes-mallapixels & >& microbiomes-mallapixels.log

# Wait for available connection
DELAY=3
while ! ping -c 1 -n -W 1 "localhost" -p 8080 &> /dev/null; do
  echo "Cannot reach $DOMAIN, next try in $DELAY secondsâ€¦"
  sleep $DELAY
done

# Open each view on a different display
sleep 5
open "http://$DOMAIN/" -n -a "$BROWSER" --args --window-position=1920,0 --app --disable-features=Translate --no-first-run --kiosk
open "http://$DOMAIN/screen" -n -a "$BROWSER" --args --user-data-dir=$(mktemp -d) --window-position=0,0 --app --disable-features=Translate --no-first-run --kiosk

# Ensure browser main window is focused
sleep 10
./click-x64 -x 100 -y 100
