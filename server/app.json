{
  "title": "Microbiomes",
  "lang": "fr-FR",
  "theme": "#000000",

  "remoteWebSocketServer": "ws://localhost:8080",
  "shutdownDelay": 5000,

  "renderer": {
    "padding": 50,
    "offset": ["185px", "25px"],
    "rotationSpeed": 0.05,
    "fps": 30,
    "scale": 7
  },

  "gamepad": {
    "mapping": {
      "shutdown": "DPad-Up",
      "clear": "DPad-Down",
      "random": "DPad-Right",
      "send": "DPad-Left"
    },
    "debug": {
      "s": "DPad-Up",
      "c": "DPad-Down",
      "r": "DPad-Right",
      "Enter": "DPad-Left"
    }
  },

  "scene": {
    "invert": false,
    "displayNewCreature": 10000,
    "patterns": [
      "1-",
      "12",
      "12-",
      "1-2---"
    ],
    "palettes": [
      ["#ff528c"],
      ["#ff528c", "##ff8c41"],
      ["#ff8c41"],
      ["#ff8c41", "#ffe448"],
      ["#ffe448"],
      ["#54db87"],
      ["#00d7e9"],
      ["#00d7e9", "#968ae9"],
      ["#968ae9"],
      ["#968ae9", "#bbb6c1"]
    ]
  },

  "colorMapping": {
    "black": [0, 0, 0],
    "white": [255, 255, 255],
    "#ff528c": [255, 42, 60],
    "#ff8c41": [255, 100, 0],
    "#ffe448": [255, 228, 0],
    "#54db87": [84, 219, 10],
    "#00d7e9": [0, 215, 233],
    "#968ae9": [255, 100, 233]
  },

  "population": {
    "maxLength": 10
  }
}
